<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.laokou.admin.gatewayimpl.database.SourceMapper">

    <select id="getSourceByName" resultType="org.laokou.admin.gatewayimpl.database.dataobject.SourceDO">
        select driver_class_name
             ,url
             ,username
             ,password
        from boot_sys_source
        where del_flag = 0
            and name = #{name}
    </select>
    <select id="getSourceListFilter" resultType="org.laokou.admin.gatewayimpl.database.dataobject.SourceDO">
        select id
              ,`name`
              ,'***' as driver_class_name
              ,'***' as url
              ,'***' as username
        from boot_sys_source
        where del_flag = 0
        <if test="name != null and name != ''">
            and `name` like #{name}
        </if>
        order by id desc
    </select>
    <select id="getSourceByTenantId" resultType="org.laokou.admin.gatewayimpl.database.dataobject.SourceDO">
        select a.`name`
             , a.`driver_class_name`
             , a.`url`
             , a.`username`
             , a.`password`
        from boot_sys_source a
                 JOIN boot_sys_tenant b on b.source_id = a.id
        where b.id = #{tenantId}
    </select>
</mapper>
